<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: orange; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddColecaoController">

    <Label style="-fx-font-size: 26px; -fx-font-family: Georgia; -fx-text-fill: #8c0000;" text="Adicionar Nova Coleção" />

    <TextField fx:id="txtNomeColecao" promptText="Nome da coleção" style="-fx-font-size: 14px; -fx-font-family: Georgia;" />

    <Label fx:id="lblErro" style="-fx-font-size: 12px;" textFill="red" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#criarColecao" prefWidth="100" style="-fx-background-color: #C8A2C8; -fx-font-family: Georgia; -fx-font-size: 16px;" stylesheets="@style.css" text="Criar" />

        <Button onAction="#cancelar" prefWidth="100" style="-fx-background-color: #dddddd; -fx-font-family: Georgia; -fx-font-size: 16px;" stylesheets="@style.css" text="Cancelar" />
    </HBox>

</VBox>
